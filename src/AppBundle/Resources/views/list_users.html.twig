{% extends "::base.html.twig" %}

{% block body %}

    <table>
        <tbody>
        <tr>
            <td>Username</td>
            <td>Email</td>
            <td>User Type</td>
            <td colspan="2">Options</td>
        </tr>
        <tr>
            <td colspan="5"> <hr /></td>
        </tr>
        {% for user in users %}
            <tr>
                <td>
                    {{ user.username }}
                </td>
                <td>
                    {{ user.email }}
                </td>
                <td>
                    {{ user.roles[0][5:]}}
                </td>
                <td>
                    <a href="{{ path('edit_user', {'id': user.id }) }}">Edit User</a>
                </td>
                <td>
                    <a href="{{ path('delete_user', {'id' : user.id}) }}">Delete User</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}