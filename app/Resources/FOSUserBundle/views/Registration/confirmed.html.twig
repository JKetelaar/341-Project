{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

    {% block head %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
              integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
              crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css">

        <title>{% block title %}Dental Central{% endblock %}</title>
    {% endblock head %}
    <div class="register-confirm-content">

        <img class="logo-register-confirm" src="{{ asset('images/logo.png') }}" alt="" width="100" height="100">


        <p class="register-confirmed">{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
        <p class="login-message-register">Click Below To Log In To Your Account</p>
        <form action="/dashboard">
            <button type="submit" class="btn-dashboard-redirect">Log me in!</button>
        </form>
    </div>
    {% if targetUrl %}
        <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
    {% endif %}
{% endblock fos_user_content %}
